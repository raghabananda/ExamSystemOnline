@{
    //dropdownlist filled
    Database Db=Database.Open("ExamSystem");
    string SelectCommand="SELECT [ID], [SubjectName] FROM [Subject]";
    IEnumerable<dynamic> Datas=Db.Query(SelectCommand);

   
    //Editor filled
    dynamic dyn=null;
    if(!string.IsNullOrEmpty(Request.QueryString["QuestionID"]))
    {
       string SelectCommand1="SELECT [QuestionID], [SubjectID], [Question], [A], [B], [C], [D], [Answer] FROM [Question] WHERE [QuestionID]=@0";
       dyn=Db.QuerySingle(SelectCommand1,Request.QueryString["QuestionID"]);
    }

    if(IsPost)
    {
         if(!string.IsNullOrEmpty(Request["Logout"]))
        {
            Session.Abandon();          
            Response.Redirect("Default");
        }
        else
        {
       string QuestionID=Request.QueryString["QuestionID"];
       string SubjectID=Request["Subject"];
       string Question=Request["Question"];
       string A=Request["A"];
       string B=Request["B"];
       string C=Request["C"];
       string D=Request["D"];
       string Answer=Request["Answer"];      
       string UpdateCommand="UPDATE [Question] SET [SubjectID] = @0, [Question] = @1, [A] = @2, [B] = @3, [C] = @4, [D] = @5, [Answer] = @6 WHERE [QuestionID] = @7";
       Db.Execute(UpdateCommand,SubjectID,Question,A,B,C,D,Answer,QuestionID);
       Response.Redirect("QuestionEdit?S_ID="+SubjectID);
       }
    }
    
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title></title>
        <link rel="stylesheet" href="bootstrap.3.3.5/Content/bootstrap.min.css">
        <link rel="stylesheet" href="bootstrap.3.3.5/Content/bootstrap-theme.min.css">        
        <script src="Script/jquery-1.11.3.min.js" type="text/javascript"></script>
        <script src="bootstrap.3.3.5/Scripts/bootstrap.min.js" type="text/javascript"></script>
         <link rel="stylesheet" href="StyleSheets/StyleSheetFPage1.css">
