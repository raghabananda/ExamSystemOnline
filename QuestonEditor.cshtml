            #header{
                height: 100px;
            }
            nav{
                margin-top: -30px;
            }   
            h3{
                margin-top: -16px;
            }                   
        </style>
    </head>
    <body onload="Process()">
        @try{
            
        if(Session["AdminID"]!=null)
        {
            if(Session["AdminID"].ToString().Equals("Admin"))
                {  
         <div id="header" class="jumbotron">
                <h3>Exam System</h3>
            </div>

            <nav class="navbar navbar-default">
                <div class="container">

                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Home <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">Student</a></li>
                            <li><a href="Subject">Subject</a></li>
                            <li><a href="AdminDataEntry">Question</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">View Database<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Student Log</a></li>
                                    <li><a href="SubjetEdit">Subject</a></li>
                                    <li><a href="QuestionEdit">Question</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form method="post" id="LogOutForm">
                            <ul class="nav navbar-nav navbar-right">

                                <li>
                                    <input type="hidden" name="Logout" value="Logout">
                                    <a href="javascript:document.getElementById('LogOutForm').submit()">Log Out</a>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </nav>
             
                 <div class="container" id="DataEntryContainer">
            <div class="panel panel-primary">
                <div class="panel-heading"><h2>Question</h2></div>
                <div class="panel-body"> 
                    @if(!string.IsNullOrEmpty(Request.QueryString["QuestionID"]))
                     {       
                         try{
                             <label style="visibility: hidden">@dyn.QuestionID</label>
                              <div class="row">
                                  <div class="col-sm-7">
                                       <form class="form-horizontal" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Subject:</label>
                            <div class="col-sm-10">
                                <select name="Subject" class="form-control" id="Subject">
                                    <option value="0">Select Subject</option>
                                    @foreach(var item in Datas)
                                    {
                                        <option value="@item.ID" id="@item.ID">@item.SubjectName</option>
                                    }
                                </select>
                               
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Question:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="Question" name="Question" value="@dyn.Question" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">A :</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="A" name="A" required="" value="@dyn.A">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">B :</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="B" name="B" required="" value="@dyn.B">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">C :</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="C" name="C" required="" value="@dyn.C">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">D :</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="D" name="D" required="" value="@dyn.D">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Answer:</label>
                            <div class="col-sm-10">
                                <p style="padding: 0px"></p>
                                <input type="radio" name="Answer" value="A" id="A">
                                <label>A</label>&nbsp;
                                <input type="radio" name="Answer" value="B" id="B">
                                <label>B</label>&nbsp;
                                <input type="radio" name="Answer" value="C" id="C">
                                <label>C</label>&nbsp;
                                <input type="radio" name="Answer" value="D" id="D">
                                <label>D</label>                               
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                                  </div>
                              </div>
                             
                         }  catch(Exception ex)
                         {
                             <label>Error!!!No Question found in this ID"</label>
                         }         
                   
                     }else{<label>Error!!!No Question found</label>}
                </div>
            </div>
        </div>
        <script type="text/javascript">
            function Process()
            {
               document.getElementById('@dyn.Answer').checked=true;  
               document.getElementById('Subject').value=@dyn.SubjectID; 
            }
        </script>                 
       }else{ Response.Redirect("Default");}
        }
else{
         Response.Redirect("Default");
          
        }
}catch(Exception ex)
{
     <label>Error!!!No Question found in this ID"</label>
}
    </body>
</html>
